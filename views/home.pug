block styles
  link(rel="stylesheet" href="/stylesheets/font-awesome.min.css")
  link(rel="stylesheet" href="/mod/ol/ol.css")
  link(rel="stylesheet" href="/mod/ol-ls/ol-layerswitcher.css")
